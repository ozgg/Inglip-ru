<% content_for :meta_title, t('.title', name: @entity.corpus.name, id: @entity.id) %>
<% content_for :breadcrumbs do %>
  <%= admin_biovision_component_link(component_handler.component) %>
  <%= link_to(t('admin.corpora.nav_item.text'), admin_corpora_path) %>
  <%= admin_entity_link(@entity.corpus) %>
  <span><%= @entity.model_name.human %> <%= @entity.id %></span>
<% end %>

<article>
  <h1><%= @entity.checksum %></h1>

  <dl class="fields">
    <div>
      <dt><%= @entity.class.human_attribute_name(:corpus) %></dt>
      <dd><%= admin_entity_link(@entity.corpus) %></dd>
    </div>

    <div>
      <dt><%= @entity.class.human_attribute_name(:body) %></dt>
      <dd>
        <div class="text">
          <%= simple_format(@entity.body) %>
        </div>
      </dd>
    </div>

    <div>
      <dt><%= @entity.class.human_attribute_name(:lexeme_count) %></dt>
      <dd>
        <%= link_to(@entity.lexeme_count, lexemes_admin_corpus_text_path(id: @entity.id)) %>
      </dd>
    </div>

    <div>
      <dt><%= @entity.class.human_attribute_name(:word_count) %></dt>
      <dd>
        <%= link_to(@entity.word_count, words_admin_corpus_text_path(id: @entity.id)) %>
      </dd>
    </div>

    <div>
      <dt><%= @entity.class.human_attribute_name(:pending_word_count) %></dt>
      <dd>
        <%= link_to(@entity.pending_word_count, pending_words_admin_corpus_text_path(id: @entity.id)) %>
      </dd>
    </div>

    <%= render(partial: 'shared/entity/uuid', locals: { entity: @entity }) %>
  </dl>
</article>
