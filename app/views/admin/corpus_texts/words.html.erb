<% content_for :meta_title, t('.title', name: @entity.corpus.name, id: @entity.id, page: current_page) %>
<% content_for :breadcrumbs do %>
  <%= admin_biovision_component_link(component_handler.component) %>
  <%= link_to(t('admin.corpora.nav_item.text'), admin_corpora_path) %>
  <%= admin_entity_link(@entity.corpus) %>
  <%= admin_entity_link(@entity) %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <h1><%= @entity.corpus.name %>, <%= @entity.id %></h1>
  <h2><%= t(:word_count, count: @entity.word_count) %></h2>

  <%= render partial: 'shared/admin/list', locals: { collection: @collection } %>
</article>
