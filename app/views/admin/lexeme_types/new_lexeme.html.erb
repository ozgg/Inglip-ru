  <%= link_to(t('admin.lexeme_types.nav_item.text'), admin_lexeme_types_path) %>
  <%= admin_entity_link(@entity) %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <h1><%= @entity.name %></h1>

  <section>
    <h2><%= t('.heading') %></h2>

    <%=
      render partial: 'admin/lexemes/form', locals: { entity: @entity.lexemes.new }
    %>
  </section>
</article>
