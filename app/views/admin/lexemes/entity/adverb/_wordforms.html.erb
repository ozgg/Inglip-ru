<section class="lexeme-wordforms">
  <h2><%= t('lexemes.form.wordforms') %></h2>

  <%
    qualitative_flags = Biovision::Components::Words::AdjectiveHandler.comparative_form_flags
    superlative_flags = Biovision::Components::Words::AdjectiveHandler.superlative_form_flags
  %>

  <% if handler.qualitative? %>
    <dl class="fields" data-list="qualitative">
      <% qualitative_flags.each do |key, flag| %>
        <div>
          <dt><%= t("wordform.flags.#{key}") %></dt>
          <dd><%= handler.wordform(flag)&.text %></dd>
        </div>
      <% end %>
    </dl>
  <% end %>

  <% if handler.superlative? %>
    <dl class="fields" data-list="superlative">
      <% superlative_flags.each do |key, flag| %>
        <div>
          <dt><%= t("wordform.flags.#{key}") %></dt>
          <dd><%= handler.wordform(flag)&.text %></dd>
        </div>
      <% end %>
    </dl>
  <% end %>
</section>
