<fieldset class="lexeme-wordforms">
  <legend><%= t('admin.lexemes.form.wordforms') %></legend>

  <%
    comparative_flags = Biovision::Components::Words::AdverbHandler.comparative_form_flags
    superlative_flags = Biovision::Components::Words::AdverbHandler.superlative_form_flags
  %>

  <dl class="fields" data-list="qualitative">
    <% comparative_flags.each do |key, flag| %>
      <div>
        <dt><%= t("wordform.flags.#{key}") %></dt>
        <dd>
          <%=
            text_field_tag(
                "wordforms[#{flag}]",
                handler.wordform(flag),
                class: 'input-text',
                placeholder: flag,
                title: flag
            )
          %>
        </dd>
      </div>
    <% end %>
    <% superlative_flags.each do |key, flag| %>
      <div data-list="superlative">
        <dt><%= t("wordform.flags.#{key}") %></dt>
        <dd>
          <%=
            text_field_tag(
                "wordforms[#{flag}]",
                handler.wordform(flag),
                class: 'input-text',
                placeholder: flag,
                title: flag
            )
          %>
        </dd>
      </div>
    <% end %>
  </dl>
</fieldset>
