<% options ||= {} %>
<dl class="enums">
  <% enums.each do |part, list| %>
  <div>
    <dt><%= t("lexeme.data.#{part}") %></dt>
    <dd>
      <ul>
        <% list.each do |value, key| %>
        <li>
          <% element_id = "lexeme_data_#{part}_#{value}" %>
          <%=
            radio_button_tag(
                "lexeme_data[#{part}]",
                value,
                handler.lexeme.data[part].to_i == value,
                data: options[key].to_h,
                id: element_id
            )
          %>
          <%= label_tag(element_id, t("lexeme.data.enums.#{part}.#{key}")) %>
        </li>
        <% end %>
      </ul>
    </dd>
  </div>
  <% end %>
</dl>
