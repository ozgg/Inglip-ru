<%
  handler = Biovision::Components::Words::LexemeHandler[f.object]
  flags = Biovision::Components::Words::NounHandler.lexeme_data_flags
  flag_options = {
      has_partitive: { show_rows: 'case_partitive' },
      has_locative: { show_rows: 'case_locative' }
  }
  enums = Biovision::Components::Words::NounHandler.lexeme_data_enum
  enum_options = {
      number: {
          single_only: { hide_cols: 'number_plural' },
          plural_only: { hide_cols: 'number_singular' }
      }
  }
%>

<fieldset class="lexeme-data">
  <legend><%= t('lexemes.form.lexeme_data') %></legend>

  <%=
    render(
        partial: 'lexemes/form/lexeme_flags',
        locals: { handler: handler, flags: flags, options: flag_options }
    )
  %>

  <%=
    render(
        partial: 'lexemes/form/lexeme_enums',
        locals: { handler: handler, enums: enums, options: enum_options }
    )
  %>
</fieldset>

<%=
  render(
      partial: 'lexemes/form/noun/wordforms',
      locals: { handler: handler }
  )
%>
