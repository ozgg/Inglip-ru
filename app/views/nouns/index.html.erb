<% content_for :title, t('.title', page: params[:page] || 1) %>
<% content_for :description, t('.description', page: params[:page] || 1) %>

<article>
  <header>
    <h1><%= t('.header') %></h1>
    <h2><%= t('page', page: params[:page] || 1) %></h2>
    <% if current_user %>
    <nav>
      <ul>
        <li><%= link_to t('create'), new_noun_path %></li>
      </ul>
    </nav>
    <% end %>
  </header>

  <% if @nouns.any? %>
      <%= paginate @nouns %>
      <ul>
        <% @nouns.each do |noun| %>
        <li><%= link_to noun.nominative, noun %></li>
        <% end %>
      </ul>
      <%= paginate @nouns %>
  <% else %>

  <% end %>
</article>
