<% content_for :title, t('.title', word: @verb.infinitive) %>
<% content_for :description, t('.description', word: @verb.infinitive) %>

<article class="word">
  <header>
    <h1><%= t('.header') %></h1>

    <h2><%= @verb.infinitive %></h2>
    <nav>
      <ul>
        <li><%= link_to t('to_list'), verbs_path %></li>
        <% if current_user %>
            <li><%= link_to t('edit'), edit_verb_path(@verb) %></li>
            <li><%= link_to t('create'), new_verb_path %></li>
        <% end %>
      </ul>
    </nav>
  </header>

  <p>
    <%= (t('activerecord.attributes.verb.has_reflexive') + ', ') if @verb.has_reflexive? %>
    <%= (t('activerecord.attributes.verb.has_reciprocal') + ', ') if @verb.has_reciprocal? %>
    <%= (t('activerecord.attributes.verb.has_neuter') + ', ') if @verb.has_neuter? %>
    <%= t('activerecord.attributes.verb.valency') %> <%= @verb.valency %>
  </p>
  <% if current_user %>
      <% unless @verb.imperative.blank? %>
      <p><%= t('activerecord.attributes.verb.imperative') %>: <%= @verb.imperative %></p>
      <% end %>
      <% unless @verb.gerund.blank? %>
      <p><%= t('activerecord.attributes.verb.gerund') %>: <%= @verb.gerund %></p>
      <% end %>

      <table>
        <caption><%= t('.forms') %></caption>
        <colgroup>
          <col /><col /><col />
        </colgroup>
        <thead>
        <tr>
          <th><%= t('.form') %></th><th><%= t('.singular') %></th><th><%= t('.plural') %></th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <th colspan="3"><%= t('.present') %></th>
        </tr>
        <tr>
          <th><%= t('.first') %></th>
          <td><%= @verb.present_first %></td>
          <td><%= @verb.present_first_plural %></td>
        </tr>
        <tr>
          <th><%= t('.second') %></th>
          <td><%= @verb.present_second %></td>
          <td><%= @verb.present_second_plural %></td>
        </tr>
        <tr>
          <th><%= t('.third') %></th>
          <td><%= @verb.present_third %></td>
          <td><%= @verb.present_third_plural %></td>
        </tr>
        <tr>
          <th colspan="3"><%= t('.past') %></th>
        </tr>
        <tr>
          <th><%= t('.masculine') %></th>
          <td><%= @verb.past_masculine %></td>
          <td rowspan="3"><%= @verb.past_plural %></td>
        </tr>
        <tr>
          <th><%= t('.feminine') %></th>
          <td><%= @verb.past_feminine %></td>
        </tr>
        <tr>
          <th><%= t('.neuter') %></th>
          <td><%= @verb.past_neuter %></td>
        </tr>
        </tbody>
      </table>
  <% end %>
</article>